<main>
  <section class='page-options'>
    <h2 class='page-title'>Update Pet Info</h2>
  </section>
  <section>
    <%= form_tag "/pets/#{@pet.id}", method: :patch, class: 'edit-form' do %>
      <%= label_tag :name %><br>
      <%= text_field_tag :name, @pet.name %><br>
      <%= label_tag :approximate_age %><br>
      <%= text_field_tag :approx_age, @pet.approx_age %><br>
      <%= label_tag :description %><br>
      <%= text_field_tag :description, @pet.description %><br>
      <%= label_tag :sex %><br>
      <%= text_field_tag :sex, @pet.sex %><br>
      <%= label_tag :image %><br>
      <%= text_field_tag :image, @pet.image %><br>
      <%= submit_tag 'Save', class: 'submit' %>
    <% end %>
  </section>
</main>
